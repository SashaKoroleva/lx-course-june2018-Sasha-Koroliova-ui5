<mvc:View
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        controllerName="sasha.koroliova.app.controller.OrdersOverview">
    <Page title="Orders overview">
        <content>
            <IconTabBar>
                <items>
                    <IconTabFilter
                            key="all"
                            showAll="true"
                            text="All orders"
                            count="{appView>/ordersCount}"/>
                    <IconTabSeparator/>
                    <IconTabFilter
                            key="pending"
                            icon="sap-icon://pending"
                            iconColor="Negative"
                            text="Pending"/>
                    <IconTabFilter
                            key="accepted"
                            icon="sap-icon://accept"
                            iconColor="Positive"
                            text="Accepted"/>
                </items>
                <content>
                    <Table
                            id="OrdersTable"
                            class="sapUiResponsiveMargin sapUiNoMarginTop"
                            items="{odata>/Orders}"
                            includeItemInSelection="true"
                            width="auto"
                            mode="Delete">
                        <headerToolbar>
                            <OverflowToolbar>
                                <content>
                                    <ToolbarSpacer/>
                                    <Button icon="sap-icon://add"/>
                                </content>
                            </OverflowToolbar>
                        </headerToolbar>
                        <columns>
                            <Column>
                                <Text text="ID"/>
                            </Column>
                            <Column>
                                <Text text="Customer"/>
                            </Column>
                            <Column>
                                <Text text="Created at"/>
                            </Column>
                            <Column>
                                <Text text="Shipped at"/>
                            </Column>
                            <Column>
                                <Text text="Status"/>
                            </Column>
                            <Column
                                    hAlign="End">
                                <Text text="Total price"/>
                            </Column>
                            <Column>
                                <Text text="Ship country"/>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem
                                    press="onOpenOrderPagePress"
                                    type="Navigation">
                                <Text text="{odata>id}"/>
                                <Text text="{odata>summary/customer}"/>
                                <Text text="{
                                         path: 'odata>summary/createdAt',
                                         formatter: '.dateFormatter'}"/>
                                <Text text="{
                                        path: 'odata>summary/shippedAt',
                                        formatter: '.dateFormatter'}"/>
                                <Text text="{odata>summary/status}"/>
                                <Text text="{odata>summary/totalPrice}"/>
                                <Text text="{odata>shipTo/region}"/>
                            </ColumnListItem>
                        </items>
                    </Table>
                </content>
            </IconTabBar>
        </content>
    </Page>
</mvc:View>