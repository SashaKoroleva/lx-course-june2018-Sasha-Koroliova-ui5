<mvc:View
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:f="sap.ui.layout.form"
        controllerName="sasha.koroliova.app.controller.ProductDetails">
    <Page title="Product details"
          showNavButton="true"
          navButtonPress="onNavBack">
        <content>
            <ObjectHeader
                    title="{odata>name}"
                    number="{odata>totalPrice}"
                    numberUnit="{odata>currency}"
                    condensed="true">
                <attributes>
                    <ObjectAttribute
                            text="Quantity: {odata>quantity}, price: {odata>price}"/>
                </attributes>
            </ObjectHeader>
            <Panel class="sapUiContentPadding">
                <content>
                    <HBox alignItems="Center">
                        <Label text="Author name:" class="sapUiTinyMarginEnd" />
                        <Input/>
                        <Label text="Rating:" labelFor="productRating" class="sapUiTinyMarginEnd sapUiTinyMarginBegin"/>
                        <RatingIndicator id="productRating" maxValue="5"/>
                    </HBox>
                    <FeedInput />
                    <List   noDataText="No Comments"
                            showSeparators="Inner"
                            items="{#}">
                        <FeedListItem
                                info="{#}"
                                text="{#}"
                                timestamp="{#}"/>
                    </List>
                </content>
            </Panel>
        </content>
    </Page>

</mvc:View>